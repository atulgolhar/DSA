// declarative style = specifies only what you want
// procedural style = "how to get it" like while loop which details the individual steps

// predicate = function that produces a boolean result

// functions
// select elemetns from an array            .filter(), .find(), .findIndex(), .some(), .every(), .map()
// transform an array into a new array      .map(), .reduce(), .reduceRight()

// predicate rule
// data
// apply that predicate rule
// view result

const under21 = (value) => value < 21;
let myArray = [22, 60, 112, 14, 56, 10];
let newArrayFilter = myArray.filter(under21);
console.log(".filter()", newArrayFilter);

let newArrayFind = myArray.find(under21);
console.log(".find()", newArrayFind);

let newArrayFindIndex = myArray.findIndex(under21);
console.log(".findIndex()", newArrayFindIndex);
